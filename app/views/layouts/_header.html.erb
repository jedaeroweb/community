<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <!-- 서비스 이름 (왼쪽) -->
      <%= link_to t(:service_name), '/', class: "navbar-brand" %>

      <!-- 모바일 토글 버튼 (오른쪽 끝) -->
      <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Offcanvas 메뉴 (모바일) -->
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">매뉴</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav ms-auto">
            <li class="me-3 nav-item <%= 'active' if params[:controller] == 'questions' %>">
              <%= link_to t(:question, scope: [:activerecord,:models]), questions_path, class: "nav-link" %>
            </li>
            <li class="me-3 nav-item <%= 'active' if params[:controller] == 'markets' %>">
              <%= link_to t(:market, scope: [:activerecord,:models]), markets_path, class: "nav-link" %>
            </li>
            <li class="me-3 nav-item <%= 'active' if params[:controller] == 'jobs' %>">
              <%= link_to t(:job, scope: [:activerecord,:models]), jobs_path, class: "nav-link" %>
            </li>
            <li class="me-3 nav-item <%= 'active' if params[:controller] == 'blogs' %>">
              <%= link_to t(:blog, scope: [:activerecord,:models]), blogs_path, class: "nav-link" %>
            </li>
            <li class="me-3 nav-item dropdown <%= 'active' if ['notices','talks','galleries'].include?(params[:controller]) %>">
              <%= link_to t(:menu_community), notices_path, class: "nav-link dropdown-toggle", role:"button", 'data-bs-toggle':"dropdown" %>
              <ul class="dropdown-menu">
                <li class="ms-3 nav-item <%= 'active' if current_page?(talks_path) %>"><%= link_to t(:talk, scope: [:activerecord,:models]), talks_path, class: "nav-link" %></li>
                <li class="ms-3 nav-item <%= 'active' if current_page?(notices_path) %>"><%= link_to t(:notice, scope: [:activerecord,:models]), notices_path, class: "nav-link" %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>