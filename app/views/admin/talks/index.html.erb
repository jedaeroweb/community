<div class="col-12">
  <h2 class="float-start hidden-title"><%= t(:address_list) %></h2>
      <div class="float-end">
        <p class="summary">
          <span id="list_count" style="display:none"><%=@talk_count %></span>
          <%=raw t(:there_are_n_talks,count: @talk_count) %>
        </p>
      </div>
    </div>
    <article class="col-12">
      <table id="prepare_list" class="table table-striped table-hover">
        <colgroup>
          <col style="width:120px">
          <col>
          <col>
          <col>
          <col style="width:200px">
          <% if can?(:update, Talk) || can?(:delete, Talk) %>
            <col<%=manage_width(Talk) %>>
          <% end %>
        </colgroup>
        <thead class="thead-default">
        <tr>
          <th class="text-center"><%= t(:enable,scope:[:activerecord,:attributes,:address]) %></th>
          <th><%= t(:title,scope:[:activerecord,:attributes,:address]) %></th>
          <th><%= t(:parent_address_id,scope:[:activerecord,:attributes,:address]) %></th>
          <th class="text-end"><%= t(:address_level_id,scope:[:activerecord,:attributes,:address]) %></th>
          <th class="text-end"><%= t(:created_at,scope:[:activerecord,:attributes,:address]) %></th>
          <% if can?(:update, Talk) || can?(:delete, Talk) %>
            <th class="text-center"><%= t(:manage) %></th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% unless @talk_count.zero? %>
          <% @talks.each_with_index do |talk,index| %>
            <tr>
              <td>
                <div class="custom-control custom-switch">
                  <input type="checkbox" class="custom-control-input" id="notice_display<%=index %>" value="<%=talk.id %>" <% if talk.enable %> checked<% end %>>
                  <label class="custom-control-label" for="notice_display<%=index %>"><% if talk.enable %> <%=t(:display) %><% else %><%=t(:hidden) %><% end %> </label>
                </div>
              </td>
              <td><%= link_to talk.title,admin_talk_path(talk) %></td>
              <td>
              </td>
              <td class="text-end"></td>
              <td class="text-end"><%= I18n.l talk.created_at.to_date, :format => :long %></td>
              <% if can?(:update, talk) or can?(:delete, talk) %>
                <td class="text-end">
                  <% if can? :update, talk %>
                    <%= link_to edit_admin_talk_path(talk), :class => "btn btn-secondary" do %>
                      <%= t(:edit) %>
                    <% end %>
                  <% end %>
                  <% if can? :delete, talk %>
                    <%= link_to admin_talk_path(talk), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-danger" do %>
                      <%= t(:delete) %>
                    <% end %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="text-center"><%= t(:no_data) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @talks %>
      </div>
      <%= link_to t(:add), new_admin_talk_path, :class => "btn btn-primary" %>
    </article>
