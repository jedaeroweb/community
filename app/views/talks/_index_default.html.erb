<section class="row">
  <% unless @talk_count.zero? %>
    <% @talks.each do |talk| %>
      <%=render 'index_media',talk: talk %>
    <% end %>
    <div class="col-12">
      <%= paginate @talks %>
    </div>
  <% else %>
    <div class="question col-12">
      <%= t(:no_data) %>
    </div>
  <% end %>
  <div class="col-12">
    <%=link_to t(:new_talk),new_talk_path,class: 'btn btn-primary btn-large' %>
  </div>
</section>