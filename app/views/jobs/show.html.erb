<div id="show-job">
  <div class="row">
    <article class="col-12" itemscope itemprop="article" itemtype="http://schema.org/Article">
      <div class="sl_content_header">
        <h3 itemprop="name"><%= @job.title %></h3>
        <p class="text-end"><%= t(:created_at, scope: [:activerecord, :attributes, :notice]) %> : <%= I18n.l @job.created_at.to_date, :format => :long %></p>
      </div>
      <div class="sl_content_main">
        <div class="sl_content_text" itemprop="text"><%=simple_format(@job.content.to_s) %></div>
      </div>
    </article>
  </div>
  <div class="row">
    <div class="btn-group btn-group-lg col-12" role="group" style="margin-top:3rem">
      <%=link_to t(:link_list),jobs_path,{class: 'btn btn-secondary btn-large'} %>
    </div>
  </div>
</div>
