<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this request from being saved:</h2>
      <ul>
        <% job.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => 'form-control', :required => 'required' %>
      </div>
      <%= form.fields_for :notice_content do |c| %>
        <div class="form-group">
          <%= c.label :content %>
          <%= c.text_area :content, :id => "sl_content", :class => 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-grid gap-2">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
