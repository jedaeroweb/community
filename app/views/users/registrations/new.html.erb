<div class="row">
  <section class="col-12 col-lg-8 col-xl-6" style="margin-left:auto;margin-right:auto">
    <div class="row">
      <div class="col-12">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :post, :style => 'margin-top:3rem' }) do |f| %>
          <div class="row">
            <%= render :partial => 'layouts/notice', :locals => { :errors => resource.errors, :notice => notice, :alert => alert } %>
          </div>
          <article>
            <h3>로그인 정보(필수입력)</h3>
            <div class="card">
              <div class="card-body">
                <div class="form-group col-12">
                  <%= f.label :email %>
                  <%= f.email_field :email, :class => "form-control form-control-lg" %>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                <div class="form-group col-12">
                  <%= f.label :password %>
                  <%= f.password_field :password, :class => "form-control form-control-lg", :autocomplete => "off" %>
                </div>
                <div class="form-group col-12">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, :class => "form-control form-control-lg" %>
                </div>
              </div>
            </div>
          </article>
          <article>
            <h3>회원 정보(선택입력)</h3>
            <div class="card">
              <div class="card-body">
                <div class="form-group col-12">
                  <%= f.label :name %>
                  <%= f.text_field :name, :class => "form-control form-control-lg" %>
                </div>
                <div class="form-group col-12">
                  <%= f.fields_for :user_pictures,resource.user_pictures.build do |pp| %>
                    <%= pp.label :picture %>
                    <%= pp.file_field :picture, :class => "form-control-file" %>
                  <% end %>
                </div>
              </div>
            </div>
          </article>
          <!-- <article>
          <h2><%= t(:title, scope: [:activerecord, :attributes, :company]) %></h2>
          <div class="card">
            <div class="card-body">
              <div class="form-group col-12">
                <%= label_tag :title, t(:title, scope: [:activerecord, :attributes, :company]) %>
                <%= text_field_tag :title, nil, { class: "form-control", autofocus: true } %>
              </div>
              <div class="form-group col-12">
                <%= label_tag :picture %>
                <div class="custom-file">
                  <%= file_field_tag :picture, :class => "custom-file-input" %>
                  <label class="custom-file-label" for="customFile" data-browse="<%= t(:browse) %>"><%= t(:choose_file) %></label>
                </div>
              </div>
            </div>
          </div>
        </article> -->
          <% if Rails.env.production? %>
            <div id="turnstile-container" class="mt-3"></div>
          <% end %>
          <div class="d-grid gap-2 mt-3">
            <% disabled = Rails.env.production? %>

            <%= f.submit "저장",
                         id: "submit-btn",
                         class: "btn btn-lg btn-primary",
                         disabled: disabled %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
<% if Rails.env.production? %>
  <script>
      window.turnstileLoaded = function () {
          const el = document.getElementById("turnstile-container");
          if (!el) return;

          el.innerHTML = '';

          turnstile.render(el, {
              sitekey: "<%= ENV['TURNSTILE_SITE_KEY'] %>",
              callback: function () {
                  document.getElementById("submit-btn").disabled = false;
              }
          });
      };
  </script>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?onload=turnstileLoaded" async defer></script>
<% end %>